@page
@model WebApplication.Pages.Productos.EditModel
@{
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit">

                <input type="hidden" asp-for="Entity.IdProducto" v-model="Entity.IdProducto" />

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.Nombre" v-model="Entity.Nombre" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Precio" class="form-label">Precio</label>
                    <input type="text" class="form-control" asp-for="Entity.Precio" v-model="Entity.Precio"  required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.IdCategoria" class="form-label">Categoria</label>
                    <select asp-for="Entity.IdCategoria" class="form-select" v-model="Entity.IdCategoria"
                            asp-items="@(new SelectList(Model.CategoriaLista,"IdCategoria","Descripcion"))"
                            required>
                        <option value=""></option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Cantidad" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" asp-for="Entity.Cantidad" v-model.number="Entity.Cantidad" min="0" step="1" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Caracteristicas" class="form-label">Caracteristicas</label>
                    <textarea class="form-control" asp-for="Entity.Caracteristicas" v-model="Entity.Caracteristicas" maxlength="500" rows="3"></textarea>
                </div>

                <div class="form-group form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" v-model="Entity.Estado">
                    <label class="form-check-label" for="Entity_Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-outline-primary">
                            @(Model.id.HasValue ? "Actualizar":"Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{

    <script defer src="~/App/Productos/Edit.js"></script>

}