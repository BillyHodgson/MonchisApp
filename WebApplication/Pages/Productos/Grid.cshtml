@page
@model WebApplication.Pages.Productos.GridModel
@{
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Productos
        </div>
        <div class="card-body">
            <div class="mb-2">
                <a class="btn btn-outline-primary" asp-page="Edit">
                    <i class='bx bx-add-to-queue'></i>
                </a>
                <a type="button" class="btn btn-outline-primary" asp-page="/Categoria/Grid">Gestionar Categorias</a>
            </div>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>IdProducto</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Categoria</th>
                                <th>Cantidad</th>
                                <th>Características</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdProducto</td>
                                <td>@item.Nombre</td>
                                <td>@item.Precio</td>
                                <td>@item.Categoria.Descripcion</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Caracteristicas</td>
                                <td>@(item.Estado ? "Activo" :"Inactivo")</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdProducto">
                                        <i class='bx bxs-edit'></i>
                                    </a>

                                    <button type="button" class="btn btn-outline-primary"
                                            onclick="ProductosGrid.OnClickEliminar(@item.IdProducto)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {

    <script defer src="~/App/Productos/Grid.js"></script>
}