@page
@model WebApplication.Pages.Categoria.GridModel
@{
}


<div class="container">
    <div class="card">
        <div class="card-header">
            Categorias
        </div>
        <div class="card-body">
            <div class="mb-2">
                <a class="btn btn-outline-primary" asp-page="/Productos/Grid">
                    <i class='bx bx-chevron-left'></i>
                </a>
                <a class="btn btn-outline-primary" asp-page="Edit">
                    Nueva Categoría
                    <i class='bx bx-add-to-queue'></i>
                </a>
            </div>
                <div class="row">
                    <div class="col-12">
                        <table id="GridView" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>IdCategoria</th>
                                    <th>Descripción</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GridList)
                                {
                                    <tr>
                                        <td>@item.IdCategoria</td>
                                        <td>@item.Descripcion</td>

                                        <td>
                                            <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdCategoria">
                                                <i class='bx bxs-edit'></i>
                                            </a>

                                            <button type="button" class="btn btn-outline-primary"
                                                    onclick="CategoriaGrid.OnClickEliminar(@item.IdCategoria)">
                                                <i class='bx bx-trash'></i>
                                            </button>
                                        </td>
                                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


</div>

@section Scripts {

    <script defer src="~/App/Categoria/Grid.js"></script>
}