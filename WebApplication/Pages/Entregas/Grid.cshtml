@page
@model WebApplication.Pages.Entregas.GridModel
@{
}


<div class="container">

    <div class="card">
        <div class="card-header">
            Entregas
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha Entrega</th>
                                <th>Pedido</th>
                                <th>Destino</th>
                                <th>Camion</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdEntrega</td>
                                <td>@item.FechaEntrega.ToString("dd/MM/yyyy")</td>
                                <td>@item.Pedido.IdPedido</td>
                                <td>@item.Destino</td>
                                <td>@item.Camion.IdCamion</td>
                                <td>@(item.Estado ? "Activo": "Inactivo")</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdEntrega">
                                        <i class='bx bxs-edit'></i>
                                    </a>

                                    <button type="button" class="btn btn-outline-primary"
                                            onclick="EntregaGrid.OnClickEliminar(@item.IdEntrega)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>

                            }




                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts{

    <script defer src="~/App/Producto/Grid.js"></script>

}